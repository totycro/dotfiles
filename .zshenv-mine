function parse_git_branch() {
  #(git symbolic-ref -q HEAD || git name-rev --name-only --no-undefined --always HEAD) 2> /dev/null
	BRANCH_NAME=$(git name-rev --name-only --no-undefined --always HEAD 2> /dev/null)
	if [ -z "$BRANCH_NAME" ] ; then 
		echo ""
	else
		echo "[$BRANCH_NAME]"
	fi
}
	 

