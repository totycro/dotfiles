# Conky sample configuration
# Check http://conky.sf.net for an up-to-date-list.


background yes
#background no

use_xft yes

# Xft font when Xft is enabled
#xftfont Bitstream Vera Sans Mono:size=8
#xftfont Bitstream Vera Monospace Mono:size=3
#xftfont Nice:size=4
#xftfont Nice:size=5
xftfont Nice:size=8
#xftalpha 9
#font -*-snap-*-*-*-*-*-*-*-*-*-*-*-*
#font  -lfp-gamow-medium-r-semicondensed--6-70-75-75-c-60-*-*
#font -lfp-gamow-*-*-*-*-5-*-*-*-*-*-*-*
#font -lfp-asimov-*-*-*-*-6-*-*-*-*-*-*-*
#font -artwiz-anorexia-*-*-*-*-11-*-*-*-*-*-*-*
#font -artwiz-gelly-*-*-*-*-10-*-*-*-*-*-*-*
#font -artwiz-lime-*-*-*-*-10-*-*-*-*-*-*-*

update_interval 2
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
# own_window_class conky
#own_window_colour hotpink

double_buffer yes
draw_shades no
draw_outline no
# Draw borders around text
draw_borders no

#default_color 553311
# default_color df902a
#default_color db8020
#black:
#default_color 000000
#default_color 151515
#default_color 101010
#greys:
#default_color ababab
#default_color 898989
#default_color cccccc
default_color dddddd
#white:
# default_color ffffff
#violet:
#default_color 6b0f6b
#default_color ad89b4
#default_color ff0000


#alignment top_right
#alignment bottom_right
#alignment bottom_left
alignment top_left

# Gap between borders of screen and text
gap_x 10
#gap_y 510 # normal font
#gap_y 450
#gap_y 545
#gap_y 507
#gap_y 540 # 5 mails 
#gap_y 520 # 7 mails

#gap_y 920 # 7 mails ( + 400 for big screen compared to above )

#gap_y 770 # 7 mails ( + 400 for big screen compared to above -150 new laptop)
gap_y 705 # 7 mails ( + 400 for big screen compared to above -150 new laptop + larger font)
gap_y 650 # 
gap_y 600 # +last.fm
gap_y 590 # +last.fm2
gap_y 740 # nothing
gap_y 750
gap_y 369 # matches new background image

# Subtract file system buffers from used memory?
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
maximum_width 195
minimum_size  190

#mpd_host 127.0.0.1
#mpd_host 192.168.0.18
#mpd_host 10.0.0.10
#mpd_host localhost
#mpd_port 6600

